{
  "$defs": {
    "ChartEncoding": {
      "additionalProperties": false,
      "description": "可视化编码通道的契约描述。",
      "properties": {
        "channel": {
          "description": "编码通道名称。",
          "enum": [
            "x",
            "y",
            "color",
            "size",
            "theta",
            "radius",
            "row",
            "column",
            "tooltip",
            "detail"
          ],
          "title": "Channel",
          "type": "string"
        },
        "semantic_role": {
          "description": "该编码通道期望绑定的字段语义。",
          "enum": [
            "dimension",
            "measure",
            "temporal",
            "identifier",
            "geo"
          ],
          "title": "Semantic Role",
          "type": "string"
        },
        "required": {
          "description": "通道是否为模板必填。",
          "title": "Required",
          "type": "boolean"
        },
        "allow_multiple": {
          "description": "通道是否允许绑定多个字段。",
          "title": "Allow Multiple",
          "type": "boolean"
        },
        "aggregate": {
          "anyOf": [
            {
              "enum": [
                "sum",
                "avg",
                "min",
                "max",
                "count",
                "median"
              ],
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "默认聚合方式，仅对度量字段生效。",
          "title": "Aggregate"
        },
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "通道的业务说明或使用建议。",
          "title": "Description"
        }
      },
      "required": [
        "channel",
        "semantic_role",
        "required",
        "allow_multiple"
      ],
      "title": "ChartEncoding",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "description": "图表模板契约。",
  "properties": {
    "template_id": {
      "description": "模板唯一标识。",
      "minLength": 1,
      "title": "Template Id",
      "type": "string"
    },
    "version": {
      "description": "模板版本号。",
      "minLength": 1,
      "title": "Version",
      "type": "string"
    },
    "name": {
      "description": "模板名称。",
      "minLength": 1,
      "title": "Name",
      "type": "string"
    },
    "description": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "模板说明，用于提示合适的使用场景。",
      "title": "Description"
    },
    "mark": {
      "description": "对应的可视化基础图元类型。",
      "enum": [
        "bar",
        "line",
        "area",
        "point",
        "pie",
        "heatmap",
        "table",
        "boxplot"
      ],
      "title": "Mark",
      "type": "string"
    },
    "encodings": {
      "description": "模板支持的编码通道集合。",
      "items": {
        "$ref": "#/$defs/ChartEncoding"
      },
      "minItems": 1,
      "title": "Encodings",
      "type": "array"
    },
    "default_config": {
      "additionalProperties": true,
      "description": "可直接传给渲染引擎的默认配置片段。",
      "title": "Default Config",
      "type": "object"
    },
    "supported_engines": {
      "description": "模板兼容的渲染引擎列表。",
      "items": {
        "enum": [
          "vega-lite",
          "echarts"
        ],
        "type": "string"
      },
      "minItems": 1,
      "title": "Supported Engines",
      "type": "array"
    }
  },
  "required": [
    "template_id",
    "version",
    "name",
    "mark",
    "encodings",
    "supported_engines"
  ],
  "title": "ChartTemplate",
  "type": "object",
  "$id": "https://schemas.data-interface.local/contracts/chart_template.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0"
}
