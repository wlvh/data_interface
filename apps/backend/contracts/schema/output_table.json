{
  "title": "OutputTable",
  "description": "数据变换输出的表格快照。",
  "type": "object",
  "properties": {
    "table_id": {
      "title": "Table Id",
      "description": "输出表的唯一标识。",
      "minLength": 1,
      "type": "string"
    },
    "source_plan_id": {
      "title": "Source Plan Id",
      "description": "产生该表的计划 ID，如无可为空。",
      "type": "string"
    },
    "row_count": {
      "title": "Row Count",
      "description": "输出表的总记录数。",
      "minimum": 0,
      "type": "integer"
    },
    "columns": {
      "title": "Columns",
      "description": "输出表的列名称列表，按顺序排列。",
      "json_schema_extra": {
        "minItems": 1
      },
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sample_rows": {
      "title": "Sample Rows",
      "description": "用于展示的样本行集合。",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": {
          "type": "string",
          "maxLength": 50
        }
      }
    },
    "generated_at": {
      "title": "Generated At",
      "description": "表格生成时间（UTC）。",
      "type": "string",
      "format": "date-time"
    },
    "logs": {
      "title": "Logs",
      "description": "执行过程中的日志集合。",
      "type": "array",
      "items": {
        "$ref": "#/definitions/TransformLog"
      }
    }
  },
  "required": [
    "table_id",
    "row_count",
    "columns",
    "generated_at"
  ],
  "additionalProperties": false,
  "$defs": {
    "TransformLog": {
      "title": "TransformLog",
      "description": "变换执行过程中的日志记录。",
      "type": "object",
      "properties": {
        "level": {
          "title": "Level",
          "description": "日志级别。",
          "minLength": 1,
          "type": "string"
        },
        "message": {
          "title": "Message",
          "description": "日志内容。",
          "minLength": 1,
          "type": "string"
        },
        "timestamp": {
          "title": "Timestamp",
          "description": "UTC 时间的日志时间戳。",
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "level",
        "message",
        "timestamp"
      ],
      "additionalProperties": false
    }
  },
  "$id": "https://schemas.data-interface.local/contracts/output_table.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0"
}