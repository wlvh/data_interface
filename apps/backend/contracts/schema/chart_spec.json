{
  "$defs": {
    "ChartChannelMapping": {
      "additionalProperties": false,
      "description": "模板编码映射，描述字段如何绑定到视觉通道。",
      "properties": {
        "channel": {
          "description": "视觉通道名称，例如 x、y、color。",
          "minLength": 1,
          "title": "Channel",
          "type": "string"
        },
        "field_name": {
          "description": "绑定到该通道的字段。",
          "minLength": 1,
          "title": "Field Name",
          "type": "string"
        },
        "aggregation": {
          "description": "字段在该通道的聚合方式。",
          "enum": [
            "none",
            "sum",
            "avg",
            "count"
          ],
          "title": "Aggregation",
          "type": "string"
        }
      },
      "required": [
        "channel",
        "field_name",
        "aggregation"
      ],
      "title": "ChartChannelMapping",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "description": "图表最终规范，组合模板与编码映射。",
  "properties": {
    "chart_id": {
      "description": "图表唯一标识。",
      "minLength": 1,
      "title": "Chart Id",
      "type": "string"
    },
    "template_id": {
      "description": "引用的基础模板 ID。",
      "minLength": 1,
      "title": "Template Id",
      "type": "string"
    },
    "engine": {
      "description": "渲染引擎类型，例如 vega-lite。",
      "minLength": 1,
      "title": "Engine",
      "type": "string"
    },
    "encodings": {
      "description": "字段到视觉通道的映射。",
      "items": {
        "$ref": "#/$defs/ChartChannelMapping"
      },
      "minItems": 1,
      "title": "Encodings",
      "type": "array"
    },
    "data_source": {
      "description": "绑定的数据表 ID。",
      "minLength": 1,
      "title": "Data Source",
      "type": "string"
    },
    "parameters": {
      "additionalProperties": true,
      "description": "模板参数或配置项。",
      "title": "Parameters",
      "type": "object"
    }
  },
  "required": [
    "chart_id",
    "template_id",
    "engine",
    "encodings",
    "data_source"
  ],
  "title": "ChartSpec",
  "type": "object",
  "$id": "https://schemas.data-interface.local/contracts/chart_spec.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0"
}