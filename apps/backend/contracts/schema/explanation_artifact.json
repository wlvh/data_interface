{
  "additionalProperties": false,
  "description": "解释 Agent 输出的结构化结果。",
  "properties": {
    "x-spec-version": {
      "default": "2.0.0",
      "description": "契约对象对应的 Schema 版本号，用于离线回放与迁移。",
      "title": "X-Spec-Version",
      "type": "string"
    },
    "markdown": {
      "description": "面向用户展示的 Markdown 说明。",
      "minLength": 1,
      "title": "Markdown",
      "type": "string"
    },
    "key_points": {
      "description": "解释重点摘要列表。",
      "items": {
        "type": "string"
      },
      "title": "Key Points",
      "type": "array"
    },
    "generated_at": {
      "description": "生成时间（UTC）。",
      "format": "date-time",
      "title": "Generated At",
      "type": "string"
    }
  },
  "required": [
    "markdown",
    "key_points",
    "generated_at"
  ],
  "title": "ExplanationArtifact",
  "type": "object",
  "$id": "https://schemas.data-interface.local/contracts/explanation_artifact.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "2.0.0"
}
